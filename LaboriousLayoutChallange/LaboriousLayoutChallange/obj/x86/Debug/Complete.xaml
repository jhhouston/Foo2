                   Height="200" 
                   Width="200"/>

        <Image   Grid.Row="1" 
                   Source="Assets/ticket.jpg"  
                   Margin="20,40,0,100"  
                   HorizontalAlignment="Center" 
                   Height="400"                  
                  />
        <StackPanel  Margin="0,20" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                         
                <StackPanel>
                    <TextBlock Text="Order" FontSize="36" HorizontalAlignment="Center"/>
                    <TextBlock Text="96" FontSize="64" HorizontalAlignment="Center"/>
                </StackPanel>
            
        </StackPanel>
        
    </Grid>
